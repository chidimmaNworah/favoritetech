{{!-- header partial file --}}
{{>header}}

{{>navigation}}

<section class="section my-4">
  <div class="container text-center">
    <div class="title py-5">
      <h1>Node File Uploader</h1>
      <p class="subtitle">Upload Images to Server</p>
    </div>
 

    {{!input area from choose file to button beginning}}
    <div class="row justify-content-center">
      <div class="col-4">
        <form
          action="/uploadmultiple"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="row">
            <div class="col-8">
              <input
                type="file"
                class="form-control"
                name="images"
                id="formFile"
                multiple
              />
            </div>
            <div class="col-2">
              <input
                type="submit"
                class="btn btn-warning"
                value="Upload Images"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
    {{!input area from choose file to button end}}

    {{!display images beginning}}
    <section class="mt-5">
      <div class="row">
        {{#each images}}
          {{#each this}}
            {{#if imageBase64}}
              <div class="col-3">
                <div class="card shadow" style="width: 18rem;">
                  <img
                    src="data:{{contentType}};base64,{{imageBase64}}"
                    class="card-img-top img-fluid"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title font-poppins">UI/UX Design</h5>
                    <p class="text-secondary font-size-09">Some quick example
                      text to build on the card title and make up the bulk of
                      the card's content.</p>
                    <a
                      href="#"
                      class="btn btn-info font-size-09 text-light"
                    >Read more</a>
                  </div>
                </div>
              </div>
            {{/if}}
          {{/each}}
        {{/each}}
      </div>
    </section>
    {{!display images end}}

  </div>
</section>
{{!-- footer partial file --}}
{{>footer}}