{{!-- header partial file --}}
{{>header}}

{{>navigation}}

<section class="section my-4">
  <div class="container text-center">
    <div class="title py-5">
      <h1>Node File Uploader</h1>
      <p class="subtitle">Upload Images to Server</p>
    </div>
 

    {{!input area from choose file to button beginning}}
    <div class="row justify-content-center">
      <div class="col-4">
        <form
          action="/graphics"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="row">
            <div class="col-8">
              <input
                type="file"
                class="form-control"
                name="images"
                id="formFile"
                multiple
              />
            </div>
            <div class="col-2">
              <input
                type="submit"
                class="btn btn-warning"
                value="Upload Images"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  

    {{!input area from choose file to button end}}

    {{!display images beginning}}
<section class="bg-light py-10" id="explore">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-10">
                    <h2>Graphic Designs</h2>
                    <p class="lead">You do not have to be left out in owning professionally designed graphics as shown below</p>
                </div>
            </div>
        </div>
        <div class="row gx-5 text-center">
            
    {{#each images}}
        {{#each this}}
            {{#if imageBase64}}
            <div class="col-lg-4 mb-5">
                <h6 class="mb-3">Demo 1 - Multipurpose</h6>
                <a class="d-block rounded-3 lift lift-lg" href="#">
                    <img class="img-fluid rounded-3" src="data:{{contentType}};base64,{{imageBase64}}">
                </a>
            </div>
            {{/if}}
        {{/each}} 
    {{/each}}
        </div>
    </div>
    <div class="svg-border-rounded text-white">
        <!-- Rounded SVG Border-->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>
    </div>
</section>
    {{!display images end}}

  </div>
</section>
